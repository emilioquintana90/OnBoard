<h1 class="display-4">Your Kennels</h1>
<%= link_to "Back", kennel_owner_user_path(@owner), class: 'btn btn-primary btn-lg' %>
<%= link_to "Add kennel", kennel_owner_user_new_kennel_path, class: 'btn btn-outline-success btn-lg' %>


<hr>
<% @kennels.each do |kennel| %>
 <%= link_to kennel.name, kennel_owner_user_kennel_path(kennel), class: 'btn btn-success btn-lg' %>
 <br>
 <%= 'Located at: ' + kennel.address %>
 <br>
 <%= ' Number of dens: ' + kennel.capacity.to_s %>
 <br>
 <%= 'Price per night: ' + kennel.rate.to_s  %>
 <br>
 <%= (kennel.dens.select {|d|d.occupied == true}).count.to_s + ' | ' + kennel.dens.count.to_s + ' dens currently occupied.'  %>
 <br>
 <hr>
<% end %>

