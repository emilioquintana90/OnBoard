<p class="display-4">Add Kennel</p>
<hr>

<% if flash[:kennel_errors] %>
  <% flash[:kennel_errors].each do |error| %>
    <p style='color: red;'><%= error %></p>
  <% end %>
<% end %>

<%= form_for @kennel do |f| %>
  <div class="form-group">
  <%= f.label :name, class: 'form-text text-muted'%>
  <%= f.text_field :name, class: 'form-text text-muted' %>
  </div>
  
  <div class="form-group">
  <%= f.label :address, class: 'form-text text-muted' %>
  <%= f.text_field :address, class: 'form-text text-muted' %>
  </div>

  <div class="form-group">
  <%= f.label :rate, class: 'form-text text-muted' %>
  <%= f.text_field :rate, class: 'form-text text-muted' %>
  </div>

  <div class="form-group">
  <%= f.label :capacity, class: 'form-text text-muted' %>
  <%= f.text_field :capacity, class: 'form-text text-muted' %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id%>

  <%= f.submit class: 'btn btn-primary btn-lg' %> 
  
<% end %>
