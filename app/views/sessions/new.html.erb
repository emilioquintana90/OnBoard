<h1>OnBoard: Current User Log in</h1>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :email_address %>
  <%= f.text_field :email_address %>
  <br>
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <br>

  <%= f.submit "log in" %>
  <br>
  <br>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>