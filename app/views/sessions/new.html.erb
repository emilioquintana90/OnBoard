<p class="display-1">OnBoard </p>



<%= form_for @user, url: login_path, method: :post do |f| %>
  <div class="form-group">
  <%= f.label :email_address, class: 'form-text text-muted' %>
  <%= f.text_field :email_address, class: 'form-text text-muted'%>
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  
  <div class="form-group">
  <%= f.label :password , class: 'form-text text-muted' %>
  <%= f.password_field :password, class: 'form-text text-muted' %>
  </div>
  

  <%= f.submit "log in" , class: 'btn btn-primary btn-lg'%>
  <br>
  <br>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>