<p class="display-1">OnBoard</p>

<% if flash[:user_errors] %>
  <% flash[:user_errors].each do |error| %>
    <p style='color: red;'><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <div class="form-group">
  <%= f.label :name, class: 'form-text text-muted'%>
  <%= f.text_field :name, class: 'form-text text-muted' %>
  </div>
  
  <div class="form-group">
  <%= f.label :age, class: 'form-text text-muted' %>
  <%= f.text_field :age, class: 'form-text text-muted' %>
  </div>

  <div class="form-group">
  <%= f.label :email_address, class: 'form-text text-muted' %>
  <%= f.text_field :email_address, class: 'form-text text-muted' %>
  </div>

  <div class="form-group">
  <%= f.label "Password", class: 'form-text text-muted' %>
  <%= f.password_field :password, class: 'form-text text-muted' %>
  </div>

  <div class="form-group">
  <%= f.label "Confirm Password", class: 'form-text text-muted' %>
  <%= f.password_field :password_confirmation, class: 'form-text text-muted' %>
  </div>
  
  <%= f.submit class: 'btn btn-primary' %> 
  

<% end %>