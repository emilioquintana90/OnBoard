<h1>OnBoard</h1>

<% if flash[:user_errors] %>
  <% flash[:user_errors].each do |error| %>
    <p style='color: red;'><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <br>
  
  <%= f.label :age %>
  <%= f.text_field :age %><br>
  <br>

  <%= f.label :email_address %>
  <%= f.text_field :email_address %><br>
  <br>

  Password: <%= f.password_field :password %>
  Confirm Password: <%= f.password_field :password_confirmation %>
  <%= f.submit %>
  
<% end %>